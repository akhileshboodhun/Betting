<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="races">
    <xs:complexType>
      <xs:sequence>
        <xs:element maxOccurs="unbounded" name="race">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="race_name" type="xs:string" />
              <xs:element name="date_time" type="xs:date" />
              <xs:element name="distance" type="xs:unsignedShort" />
              <xs:element name="no_horses" type="xs:unsignedByte" />
            </xs:sequence>
            <xs:attribute name="race_id" type="xs:unsignedInt" use="required" />
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>